@model BankingApp.Entities.Transaction


@{
    ViewData["Title"] = "Transaction Detail";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<h2>Transaction Detail</h2>

<div class="row">
    <div class="col-md-6">
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Transaction Succesfull</h4>
            <p>Amount Send: @Model.AmountSendInUsd USD</p>
            <hr>
            <p class="mb-0">Amount Received: @Model.AmountReceivedInInr INR</p>
        </div>

    </div>

    <a href="@Url.Action("TransactionsList","Transactions")">Back</a>
</div>